<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/MyTheme"
	    android:id="@+id/roster_row_expanded"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:paddingTop="3dip"
        android:paddingBottom="3dip">
	
	<RelativeLayout 
	    android:id="@+id/roster_row_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true">
	
	    <ImageView
	        android:id="@+id/icon"
	
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
	
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="6dip"
	
	        android:src="@drawable/contact" />
		
		
		<TextView
	       	android:id="@+id/title"
	       
	       	android:layout_toRightOf="@id/icon"
	       	android:layout_alignTop="@id/icon"
	       
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dip"
	
			android:singleLine="true"
	        android:text="My Application" />
		
		<TextView
	      	android:id="@+id/desc"
	      	
	      	android:layout_toRightOf="@id/icon"
	      	android:layout_below="@id/title"
	      	
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	
	        android:text="Nun noch der Lange Status damit wir auch mal die mehrzeiligen Kommentare ausprobieren kÃ¶nnen status updates and what they do to my layout." />
	        

        <TextView
            android:id="@+id/unread"
           
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/title"
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
    
            android:singleLine="true"
            android:text="5" />

    </RelativeLayout>

	<ImageView
        android:id="@+id/arrow"

		android:layout_below="@id/roster_row_top"
		android:layout_alignParentLeft="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="6dip"
        android:layout_marginRight="6dip"

        android:src="@drawable/history1" />

	
	<TextView
      	android:id="@+id/loc_prev"
      
        android:layout_toRightOf="@id/arrow"
        android:layout_alignTop="@id/arrow"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Previous Location" />

	<TextView
      	android:id="@+id/loc_current"
      	
        android:layout_toRightOf="@id/arrow"
        android:layout_below="@id/loc_prev"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="Current Location" />

	<TextView
      	android:id="@+id/loc_next"
      
        android:layout_toRightOf="@id/arrow"
        android:layout_below="@id/loc_current"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="Next Location" />
</RelativeLayout>
